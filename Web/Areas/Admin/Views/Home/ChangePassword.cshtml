@model AppUserPasswordDto
@{
    Layout = "_Layout";
}
<div class="alert alert-warning">
    <p>
        <strong>Uyarı</strong>Şifreniz değiştirildikten sonra otomatik olarak çıkış yaptırılacaktır.
    </p>
</div>

<form method="post" asp-action="ChangePassword">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group mb-3">
        <label>Parola: </label><span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Parola Onay: </label><span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>