@model AppUserUpdateModel
@{
    Layout = "_Layout";
}
<form asp-action="Index" method="post">
    <div class="form-group">
        <label>Adınız: </label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyadınız: </label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon Numaranız: </label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ön Yazı: </label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres: </label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group row">
        <div class="col-6">
            @{
                if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <label>Bir Önceki Resminiz</label>
                    <img src="~/img/@Model.ImageUrl" alt="@Model.FirstName" style="height:4rem!important; width:5rem!important" />
                }
            else
            {
                <div class="alert alert-light text-center">Herhangi Bir Resim Sistemde Kayıtlı Değil
                </div>
            }
            }
        </div>
        <div class="col-6">
            <label>Resim Seç</label>
            <input type="file" asp-for="Picture" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" types="submit">Kaydet</button>
    </div>
</form>