@model AppUserUpdateModel
@{
    Layout = "_Layout";
}
<form asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group mb-3">
        <label>Adınız: </label>
        <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
        <input asp-for="@Model.FirstName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Soyadınız: </label>
        <span class="text-danger" asp-validation-for="@Model.LastName"></span>
        <input asp-for="@Model.LastName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Mail: </label>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Telefon Numaranız: </label>
        <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Ön Yazı: </label>
        <span class="text-danger" asp-validation-for="@Model.ShortDescription"></span>
        <input asp-for="@Model.ShortDescription" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Adres: </label>
        <span class="text-danger" asp-validation-for="@Model.Address"></span>
        <input asp-for="@Model.Address" class="form-control" />
    </div>
    <div class="form-group row">
        <div class="col-6">
            @{
                if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <label>Bir Önceki Resminiz</label>
                    <img src="~/img/@Model.ImageUrl" alt="@Model.FirstName" style="height:4rem!important; width:5rem!important" />
                }
                else
                {
                    <div class="alert alert-light text-center">
                        Herhangi Bir Resim Sistemde Kayıtlı Değil
                    </div>
                }
            }
        </div>
        <div class="col-6 mt-4">
            <label>Resim Seç</label>
            <input asp-for="@Model.Picture" class="form-control-file" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" types="submit">Kaydet</button>
    </div>
</form>