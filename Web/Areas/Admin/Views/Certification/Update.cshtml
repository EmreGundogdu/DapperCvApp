@model CertificationUpdateDto
@{
    Layout = "_Layout";
}
<form asp-action="Update" asp-controller="Certification" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label>Sertifika Bilgisi: </label><span asp-validation-for="@Model.Description" class="text-danger"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    </div>
</form>