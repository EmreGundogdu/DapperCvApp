@model List<SocialMediaIconsListDto>
@{
    Layout = "_Layout";
}
<div class="text-right mb-2">
    <a asp-action="Add" asp-controller="SocialMediaIcon" class="btn btn-outline-dark">Yeni Kayıt</a>
</div>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Icon Bilgisi</th>
            <th>Link Bilgisi</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Icon</td>
                <td>@item.Link</td>
                <td>
                    <a asp-action="Update" asp-controller="SocialMediaIcon" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-2">Güncelle</a>
                    <a onclick="return confirm('Silmek istediğinizden eminmisiniz?')" asp-action="Delete" asp-controller="SocialMediaIcon" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>
